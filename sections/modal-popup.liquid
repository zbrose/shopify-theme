<div class="custom-modal-section" data-sectionid="Section-{{ section.id }}" data-delay="{{ section.settings.delay_time | default: 2 }}">
  <div class="modal-overlay" aria-hidden="true">
    <div class="modal-content">

			<button class="close-modal-btn" aria-label="Close modal">
				<svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
					<line x1="20" y1="6" x2="6" y2="20"></line>
					<line x1="6" y1="6" x2="20" y2="20"></line>
				</svg>
			</button>

   		<div class="modal-hero">
        <h2 class="modal-title">{{ section.settings.modal_title }}</h2>
        {% if section.settings.modal_image %}
          {{ section.settings.modal_image | image_url: width: 374, height: 360 | image_tag: width: 374, height: 360, class: 'modal-img' }}
        {% else %}
          <img src="https://placecats.com/374/360" width="374" height="360" class="modal-img" alt="Modal Image">
        {% endif %}
				<p>Use code <span class="discount-code">{{  section.settings.discount_code }}</span> for $5 off your first order</p>
      </div>



			<div class="modal-btn-group">

				<a class="confirm-modal-btn" href="{{ section.settings.confirm_button_link }}">
						{{ section.settings.confirm_button_text }}
				</a>
	
				<button class="decline-modal-btn">
					{{ section.settings.decline_button_text }}
				</button>

			</div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Modal Popup",
  "settings": [
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "Open Modal"
    },
    {
      "type": "text",
      "id": "modal_title",
      "label": "Modal Title",
      "default": "goodr"
    },
    {
      "type": "textarea",
      "id": "modal_description",
      "label": "Modal Description",
    },
    {
      "type": "text",
      "id": "close_button_text",
      "label": "Close Button text",
      "default": "X"
    },
    {
      "type": "text",
      "id": "confirm_button_text",
      "label": "Confirm Button Text",
      "default": "SHOP ALL STYLES"
    },
    {
      "type": "text",
      "id": "decline_button_text",
      "label": "Confirm Button Text",
      "default": "NAH, I HATE DEALS"
    },
    {
      "type": "url",
      "id": "confirm_button_link",
      "label": "Confirm Button Link"
    },
    {
      "type": "image_picker",
      "id": "modal_image",
      "label": "Modal Image"
    },
    {
      "type": "range",
      "id": "delay_time",
      "min": 1,
      "max": 20,
      "step": 1,
      "unit": "sec",
      "label": "Delay before showing",
      "default": 2
    },
    {
      "type": "text",
      "id": "discount_code",
			"default": "GOODR5",
			"label": "Discount Code"
    }
  ],
  "presets": [
    {
      "name": "Modal Popup"
    }
  ]
}
{% endschema %}

<style>
#Section-{{ section.id }} {
	--modal-navy: #0C2340;
	--goodr-shadow: -4px 4px var(--modal-navy)
}

#Section-{{ section.id }} .modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.6); 
  justify-content: center;
  align-items: center;
  z-index: 9999; 
}

#Section-{{ section.id }} .modal-content {
  position: relative;
  background: #FFFFFF;
	border: 3px solid var(--modal-navy);
  padding: ;
  border-radius: 8px;
  text-align: center;
	width: 484px;
	height: 654px;
  box-shadow: var(--goodr-shadow);
	padding: 52px 55px;
	display: flex;
	flex-direction: column;
	justify-content: space-between;
}
#Section-{{ section.id }} .modal-hero {
	position: relative;
	text-align: center;
}

#Section-{{ section.id }} .modal-title {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
	color: white;
}

#Section-{{ section.id }} .modal-description {
	font-weight: 700;
	font-size: 24px;
	color: var(--modal-navy);
	margin-top: 20px;
}

#Section-{{ section.id }} .dicount-code {
		font-weight: 700;
		font-size: 24px;
		color: #E06287;
		margin-top: 20px;
}

#Section-{{ section.id }} .modal-img {
	width: 374px;
	height: 360px;
	border-radius: 4px;
}

#Section-{{ section.id }} .modal-btn-group {
	display: flex;
	flex-direction: column;
	gap: 1rem;
}

#Section-{{ section.id }} .close-modal-btn {
  position: absolute;
  top: 15px;
  right: 15px;
  background: none;
  border: none;
  cursor: pointer;
  color: var(--modal-navy);
  padding: 0;
  width: 32px;
  height: 32px;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: opacity 0.2s ease;
}

#Section-{{ section.id }} .close-modal-btn:hover {
  opacity: 0.7;
}
#Section-{{ section.id }} .confirm-modal-btn {
  padding: 9px 0px;
	width: 100%;
	background-color:#EDE939;
  cursor: pointer;
  border-radius: 5px;
	box-shadow: var(--goodr-shadow);
	transition: box-shadow 0.3s ease, transform 0.3s ease;
	border-radius: 25px;
	border: 2px solid var(--modal-navy);
	text-decoration: none;
	font-weight: 700;
	font-size: 18px;
	color: white;
	text-shadow: -2.75px 2.75px var(--modal-navy);
  -webkit-text-stroke: 1px var(--modal-navy); /* For Webkit browsers (Chrome, Safari, etc.) */
}

#Section-{{ section.id }} .confirm-modal-btn:hover {
	box-shadow: 0px 0px 0px var(--modal-navy); 
}
#Section-{{ section.id }} .confirm-modal-btn:active {
	box-shadow: 0px 0px 0px var(--modal-navy); 
	transform: translate(4px, 4px); 
  
  /* Optional: Change background color on hover */
  background-color: #f7f363; 
}

#Section-{{ section.id }} .decline-modal-btn {
  color: var(--modal-navy);
  border: none;
  cursor: pointer;
	background-color: transparent;
	text-decoration: underline;
	font-size: 18px;
	font-weight: 700;
}
</style>

<script>
document.addEventListener("DOMContentLoaded", function () {
  const sectionContainer = document.querySelector("#Section-{{ section.id }}");
  const closeModalBtn = sectionContainer.querySelector(".close-modal-btn");
  const modalOverlay = sectionContainer.querySelector(".modal-overlay");
  
  const storageKey = 'shopify_modal_seen_{{ section.id }}';
	const delayInMs = {{ section.settings.delay_time | default: 2 }} * 1000;
        
	



  {% comment %} // Function to Close
  const closeModal = () => {
    modalOverlay.style.display = "none";
  };


  if (!sessionStorage.getItem(storageKey)) {
    
    setTimeout(() => {
      // Ensure the modal actually exists before trying to show it
      if (modalOverlay) {
        modalOverlay.style.display = "flex";
        
        // 2. Mark as seen for THIS session only
        sessionStorage.setItem(storageKey, 'true');
      }
    }, delayInMs);
    
  }

  // 3. Close Listeners
  closeModalBtn.addEventListener("click", closeModal);
  
  modalOverlay.addEventListener("click", (e) => {
    if (e.target === modalOverlay) closeModal();
  });

  document.addEventListener("keydown", (e) => {
    if (e.key === "Escape") closeModal();
  }); {% endcomment %}
});
</script>
