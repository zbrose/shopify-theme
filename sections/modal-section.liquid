{{ 'modal-section.css' | asset_url | stylesheet_tag }}

<div class="custom-modal-section" data-section-id="{{ section.id }}" data-delay="{{ section.settings.delay_time }}">
  <div class="modal-overlay" aria-hidden="true">
    <div class="modal-content">

			<button class="close-modal-btn" aria-label="Close modal">
				<img 
					src="{{ 'x.svg' | asset_url }}" 
					class="close-icon" 
					alt="Close Icon"
					loading="lazy"
					width="20"
					height="20"	
				>
			</button>

			<div class="modal-hero">
				{% if section.settings.modal_logo %}
					{{ section.settings.modal_logo | image_url: width: 748 | image_tag: class: 'modal-img', alt: section.settings.modal_logo_alt, loading: 'lazy', sizes: '(max-width: 600px) 252px, 484px', widths: '252, 400, 484, 748' }}
				{% else %}
					<img 
						src="{{ 'goodr_logo_white.svg' | asset_url }}" 
						class="modal-logo" 
						alt="Modal placeholder Logo"
						loading="lazy"
						width="200"
						height="auto"
					>
				{% endif %}
				{% if section.settings.modal_image %}
					{{ section.settings.modal_image | image_url: width: 748 | image_tag: class: 'modal-img', alt: section.settings.modal_image_alt, loading: 'lazy', sizes: '(max-width: 600px) 252px, 484px', widths: '252, 400, 484, 748' }}
				{% else %}
					<img 
						src="{{ 'desktop_popup_img.png' | asset_url }}" 
						class="modal-img" 
						alt="Modal placeholder image"
						loading="lazy"
						width="484"
						height="467"
					>
				{% endif %}
			</div>

			<p class="modal-description">USE CODE <span class="discount-code">{{  section.settings.discount_code }}</span> FOR $5 OFF YOUR FIRST ORDER</p>

			<div class="modal-btn-group">
				<a class="confirm-modal-btn" href="{{ section.settings.confirm_button_link }}">
						{{ section.settings.confirm_button_text }}
				</a>
				<button class="decline-modal-btn">
					{{ section.settings.decline_button_text }}
				</button>
			</div>
    </div>
  </div>
</div>

<script src="{{ 'modal-section.js' | asset_url }}" defer></script>

{% schema %}
{
  "name": "Modal Popup",
  "settings": [
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "Open Modal"
    },
    {
      "type": "image_picker",
      "id": "modal_logo",
      "label": "Modal Logo"
    },
		{
			"type": "text",
			"id": "modal_logo_alt",
			"label": "Modal Logo Alt Text",
			"default": "Modal Logo"
		}, 
		{
			"type": "text",
			"id": "modal_image_alt",
			"label": "Modal Image Alt Text",
			"default": "Modal Image"
		}, 
    {
      "type": "textarea",
      "id": "modal_description",
      "label": "Modal Description",
    },
    {
      "type": "text",
      "id": "close_button_text",
      "label": "Close Button text",
      "default": "X"
    },
    {
      "type": "text",
      "id": "confirm_button_text",
      "label": "Confirm Button Text",
      "default": "SHOP ALL STYLES"
    },
    {
      "type": "text",
      "id": "decline_button_text",
      "label": "Confirm Button Text",
      "default": "NAH, I HATE DEALS"
    },
    {
      "type": "url",
      "id": "confirm_button_link",
      "label": "Confirm Button Link"
    },
    {
      "type": "image_picker",
      "id": "modal_image",
      "label": "Modal Image"
    },
    {
      "type": "range",
      "id": "delay_time",
      "min": 1,
      "max": 20,
      "step": 1,
      "unit": "sec",
      "label": "Delay before showing",
      "default": 2
    },
    {
      "type": "text",
      "id": "discount_code",
			"default": "GOODR5",
			"label": "Discount Code"
    }
  ],
  "presets": [
    {
      "name": "Modal Section"
    }
  ]
}
{% endschema %}