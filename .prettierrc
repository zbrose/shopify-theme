{
  "printWidth": 100,
  "tabWidth": 2,
  "useTabs": false,
  "semi": true,
  "singleQuote": true,
  "trailingComma": "es5",
  "bracketSpacing": true,
  "arrowParens": "avoid",
  "overrides": [
    {
      "files": "*.liquid",
      "options": {
        "parser": "liquid-html",
        "printWidth": 120,
        "singleQuote": false
      }
    },
    {
      "files": ["*.json", "*.json.liquid"],
      "options": {
        "parser": "json",
        "tabWidth": 2
      }
    }
  ]
}
